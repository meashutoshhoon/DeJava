<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DeJava.AppTheme" parent="Theme.Material3Expressive.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Ui3.BottomSheetDialog</item>
    </style>

    <style name="DeJava.DynamicColors" parent="Theme.Material3Expressive.DynamicColors.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Widget.DeJava.TabLayout.Main" parent="@style/Widget.Material3.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fadingEdgeLength">200.0dp</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:layout_marginStart">8.0dp</item>
        <item name="tabIndicator">@null</item>
        <item name="tabMinWidth">0.0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabPaddingEnd">16.0dp</item>
        <item name="tabPaddingStart">8.0dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">?attr/colorOnSurface</item>
        <item name="tabTextAppearance">@style/TextAppearance.DeJava.HeadlineMedium.Bold</item>
        <item name="tabTextColor">?attr/colorSurfaceVariant</item>
    </style>

    <style name="TextAppearance.DeJava.HeadlineMedium.Bold" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/hanken_grotesk_bold</item>
        <item name="fontFamily">@font/hanken_grotesk_bold</item>
    </style>

    <style name="Widget.DeJava.CardView.FrontLayout" parent="@style/Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerHigh</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="shapeAppearance">@style/ShapeAppearance.DeJava.FrontLayout</item>
    </style>

    <style name="Widget.Material3.CardView.Outlined" parent="@style/Base.Widget.Material3.CardView">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
        <item name="cardElevation">0dp</item>
        <item name="checkedIconSize">@dimen/m3_comp_outlined_card_icon_size</item>
        <item name="shapeAppearance">?attr/shapeAppearanceCornerMedium</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ShapeAppearance.DeJava.FrontLayout" parent="DeJava.AppTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">0.0dp</item>
        <item name="cornerSizeBottomRight">0.0dp</item>
        <item name="cornerSizeTopLeft">24.0dp</item>
        <item name="cornerSizeTopRight">24.0dp</item>
    </style>


    <style name="ItemTitle" parent="DeJava.AppTheme">
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.95</item>
    </style>

    <style name="ItemSubTitle" parent="DeJava.AppTheme">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
    </style>


    <style name="ItemDescription" parent="DeJava.AppTheme">
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="ItemDescriptionBold" parent="DeJava.AppTheme">
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="ThemeOverlay.Ui3.BottomSheetDialog" parent="@style/ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Ui3.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Ui3.BottomSheet.Modal" parent="@style/Widget.Material3.BottomSheet">
        <item name="backgroundTint">?attr/colorSurfaceContainerHigh</item>
        <item name="android:elevation" tools:ignore="PrivateResource">
            @dimen/m3_bottom_sheet_elevation
        </item>
    </style>


    <style name="ExpandedToolbarTitle" parent="DeJava.AppTheme">
        <item name="android:textSize">33.0sp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:padding">1.0dip</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:alpha">0.95</item>
    </style>

    <style name="Shape.Card.First" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
    </style>

    <style name="Shape.Card.Middle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Shape.Card.Last" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="Shape.Pill" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    // for devices running A11 and below

    <style name="ThemeOverlay.DeJava.AmoledThemeBelowV31" parent="" tools:ignore="PrivateResource">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorSurfaceContainerLowest">@color/black</item>
        <item name="colorSurfaceContainerHighest">@color/black</item>
        <item name="colorSurfaceDim">@color/black</item>
    </style>

</resources>